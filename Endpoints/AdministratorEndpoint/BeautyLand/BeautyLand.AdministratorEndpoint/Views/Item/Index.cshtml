@using BeautyLand.Application.Administrator.ViewServices.Catalogs.Items;
@model List<ItemDto> ;

@{
    ViewData["Title"] = "لیست محصولات";
}

<h1>لیست محصولات</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">محصول</th>
            <th scope="col">قیمت</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("n0") تومان</td>
                <td class="row">
                    <a class="btn" href="#" onclick="EditName('@item.Id', '@item.Name'); return false;">ویرایش</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="EditItem" tabindex="-1" role="dialog" aria-labelledby="RenameProducteeee" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">تغییر نام محصول</h5>
            </div>
            <form asp-action="Edit" asp-controller="Item">
                <div class="modal-body">
                    <input type="hidden" id="Id" name="id" value="" />
                    <label>نام محصول</label>
                    <br />
                    <input class="form-control col-md-12" type="text" id="Name" name="name" value="" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn">ثبت تغییرات</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script>
        function EditName(id, name) {
            $("#Id").val(id);
            $("#Name").val(name);
            $('#EditItem').modal('show');
        }
    </script>
}